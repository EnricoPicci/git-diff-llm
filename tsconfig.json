{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "allowJs": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true, //
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "lib": ["ES2021"]
    },
    "include": ["src/*.ts", "src/**/*.ts"],
    "exclude": ["node_modules"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2021", "dom"]
}
